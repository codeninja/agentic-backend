apiVersion: v2
name: {{ project_name }}
description: Helm chart for {{ project_name }} (generated by ninja-deploy)
type: application
version: 0.1.0
appVersion: "1.0.0"
{% if dependencies %}

dependencies:
{% for dep in dependencies %}
  - name: {{ dep.name }}
    version: {{ dep.version }}
    repository: {{ dep.repository }}
{% endfor %}
{% endif %}
