apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: {{ app_name }}-netpol
  labels:
    app: {{ app_name }}
    project: {{ project_name }}
spec:
  podSelector:
    matchLabels:
      app: {{ app_name }}
  policyTypes:
    - Ingress
    - Egress
  ingress:
    - ports:
        - protocol: TCP
          port: {{ port }}
  egress:
    - to:
        - namespaceSelector: {}
      ports:
        - protocol: UDP
          port: 53
        - protocol: TCP
          port: 53
    {% for svc in infra_services %}
    - to:
        - podSelector:
            matchLabels:
              app: {{ svc.name }}
      ports:
        - protocol: TCP
          port: {{ svc.port }}
    {% endfor %}
