apiVersion: v1
kind: Secret
metadata:
  name: {{ project_name }}-secret
  labels:
    project: {{ project_name }}
  annotations:
    # Replace stringData values with real credentials before deploying,
    # or switch to an ExternalSecret CRD for production use.
    ninja-deploy/placeholder-warning: "credentials must be replaced"
type: Opaque
stringData:
{% if StorageEngine.SQL in engines %}
  POSTGRES_USER: "postgres"
  POSTGRES_PASSWORD: "${POSTGRES_PASSWORD}"
{% endif %}
{% if StorageEngine.MONGO in engines %}
  MONGO_USER: "root"
  MONGO_PASSWORD: "${MONGO_ROOT_PASSWORD}"
{% endif %}
{% if StorageEngine.GRAPH in engines %}
  NEO4J_AUTH: "neo4j/${NEO4J_PASSWORD}"
{% endif %}
