{% extends "base.html.j2" %}
{% block title %}CRUD Viewer — {{ project_name }}{% endblock %}
{% block content %}
<h1 style="margin: 1.5rem 0 1rem;">{{ project_name }} — Data Viewer</h1>
<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1rem;">
  {% for entity in entities %}
  <div class="card">
    <h3 style="margin-bottom: 0.5rem;">
      <a href="{{ entity.slug | safe_id }}.html" style="color: #1a1a2e; text-decoration: none;">{{ entity.name }}</a>
    </h3>
    <p style="font-size: 0.85rem; color: #718096; margin-bottom: 0.5rem;">{{ entity.field_count }} fields</p>
    <span class="badge badge-{{ entity.storage_engine | lower | safe_id }}">{{ entity.storage_engine }}</span>
  </div>
  {% endfor %}
</div>
{% endblock %}
